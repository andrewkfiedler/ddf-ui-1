<h5 align="center">Queries for {{name}}</h5>

<div class="querySelector-query">
    <div class="querySelector-queryFilter">
        <span>
            Filter
        </span>
    </div>
    <div class="querySelector-queryName">
        <span>
            Name
        </span>
    </div>
    <div class="querySelector-queryResults">
        <span>
            Results
        </span>
    </div>
</div>
<div class="querySelector-list">
    {{#each searches}}
        {{title}}
    {{/each}}
</div>
{{#unless searches}}
    <h6 align="center">
    You don't have any queries.
    Click "Add Query" to get Started.
    </h6>
{{/unless}}
<button class="querySelector-add is-primary">
    <span class="fa fa-plus">
        Add Query
    </span>
</button>